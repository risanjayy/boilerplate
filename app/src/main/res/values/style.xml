<resources>
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">@drawable/ics_o_arrow_left_alt</item>
        <item name="homeAsUpIndicator">@drawable/ics_o_arrow_left_alt</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="SplashFullScreenTheme" parent="BaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/interpack6</item>
    </style>

    <!--Dialog-->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dialog_top_rounded</item>
    </style>

    <!--Menu-->
    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="RoundedSexyRedButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:background">@drawable/bg_button_interpack6</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PasswordToggleTransparent" parent="AppTheme">
        <item name="colorControlHighlight">#0000</item>
    </style>

    <!--Text Input Layout-->

    <style name="TextInputLayoutStyle">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColorHint">@color/shades4</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/TextInputLayoutErrorAppearance</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@style/TextInputLayoutHelperAppearance</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHintAppearance</item>
        <item name="counterTextAppearance">@style/TextInputLayoutCounterAppearance</item>
    </style>

    <style name="TextInputLayoutWithErrorStyle">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColorHint">@color/shades4</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/TextInputLayoutErrorAppearance</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@style/TextInputLayoutErrorAppearance</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHintAppearance</item>
        <item name="counterTextAppearance">@style/TextInputLayoutCounterAppearance</item>
    </style>

    <style name="TextInputLayoutWithoutErrorStyle">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColorHint">@color/shades4</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/TextInputLayoutHelperAppearance</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@style/TextInputLayoutHelperAppearance</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHintAppearance</item>
        <item name="counterTextAppearance">@style/TextInputLayoutCounterAppearance</item>
    </style>

    <style name="TextInputSearchLocationLayoutStyle">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColorHint">@color/shades4</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/TextInputLayoutHelperAppearance</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@style/TextInputLayoutHelperAppearance</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHintAppearance</item>
        <item name="counterTextAppearance">@style/TextInputLayoutCounterAppearance</item>
    </style>

    <style name="TextInputMatchParentStyle" parent="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInputShareWidthStyle" parent="TextInputLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextInputLayoutErrorAppearance" parent="TextAppearance.Design.Error">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/interpack6</item>
        <item name="android:textSize">@dimen/sp_10</item>
    </style>

    <style name="TextInputLayoutHelperAppearance" parent="TextAppearance.Design.HelperText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/shades4</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextInputLayoutCounterAppearance" parent="TextAppearance.Design.HelperText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextInputLayoutHintAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/shades4</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!--Form-->

    <style name="FormEditTextViewTheme">
        <item name="colorControlActivated">@color/shades5</item>
        <item name="colorControlNormal">@color/shades4</item>
    </style>

    <style name="FormEditTextStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/shades5</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlActivated">@color/shades5</item>
        <item name="android:theme">@style/FormEditTextViewTheme</item>
        <item name="android:textColorHighlight">@color/interpack1</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="FormEditTextMatchParentStyle" parent="FormEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FormAutoCompleteTextViewTheme">
        <item name="colorControlActivated">@color/shades5</item>
        <item name="colorControlNormal">@color/shades4</item>
    </style>

    <style name="FormAutoCompleteTextViewStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/shades5</item>
        <item name="android:singleLine">true</item>
        <item name="android:theme">@style/FormAutoCompleteTextViewTheme</item>
        <item name="colorControlActivated">@color/shades5</item>
        <item name="android:textColorHighlight">@color/interpack1</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="FormAutoCompleteTextViewMatchParentStyle" parent="FormAutoCompleteTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FormAutoCompleteTextViewMultilineStyle" parent="FormAutoCompleteTextViewMatchParentStyle">
        <item name="singleLine">false</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
